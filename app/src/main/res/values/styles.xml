<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarSize">48dp</item>

    </style>


    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <style name="AppTheme1" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:homeAsUpIndicator">@mipmap/cha</item>
        <item name="android:titleTextStyle">@style/titlestyle</item>

    </style>

    <style name="titlestyle">

        <item name="android:textSize">12sp</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <!--标题颜色-->
        <!--<item name="android:textColorPrimary">@color/write</item>-->
        <!--状态栏颜色-->
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/blue_color</item>

        <!--<item name="android:actionMenuTextColor">@color/write</item>-->
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <style name="AppTheme.DrawerArrowToggleDark" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!--透明主题-->
    <style name="touming" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!--标题颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--标题颜色-->
        <item name="android:actionMenuTextColor">@color/write</item>
    </style>

    <style name="BrowserTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--标题颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/black</item>
    </style>


    <!--夜间主题-->
    <style name="AppTheme.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/accent_color</item>
        <item name="android:listSeparatorTextViewStyle">@style/MPL_PreferenceListHeader</item>
        <item name="colorPrimary">#FF03A9F4</item>
        <!--<item name="colorPrimaryDark">#FF0288D1</item>-->
        <item name="colorPrimaryDark">#FF03A9F4</item>
    </style>

    <style name="AppTheme.Light" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/accent_color</item>
        <item name="android:listSeparatorTextViewStyle">@style/MPL_PreferenceListHeader</item>
        <item name="colorPrimary">#FF03A9F4</item>
        <item name="colorPrimaryDark">#FF03A9F4</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme.Light</item>
    </style>

    <style name="AppTheme.ActionBarTheme.Light" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>



</resources>
