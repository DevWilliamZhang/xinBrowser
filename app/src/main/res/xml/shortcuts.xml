            android:action="android.intent.action.VIEW"
            android:targetPackage="com.adymilk.easybrowser.por"
            android:targetClass="com.adymilk.easybrowser.por.GamesActivity" />
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>
    <shortcut
        android:shortcutId="settings3"
        android:enabled="true"
        android:icon="@mipmap/ic_launcher"
        android:shortcutShortLabel="@string/shortcut_item_code"
        android:shortcutLongLabel="@string/shortcut_item_code"
        android:shortcutDisabledMessage="@string/shortcut_item_disable">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.adymilk.easybrowser.por"
            android:targetClass="com.adymilk.easybrowser.por.CodeActivity" />
        <categories android:name="android.shortcut.conversation"/>
